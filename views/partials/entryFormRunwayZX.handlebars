{{#if errors}}
<ul>
    {{#each errors}}
    <li>{{this.msg}}</li>
    {{/each}}

</ul>
{{/if}}
<form method="post">
    <div class="form-group">
        <label for="icao">ICAO Code</label>
        <input type="text" class="form-control" name="icao" value="{{icao}}">
    </div>

    <div class="form-group">
        <label for="type">Runway type</label>
        <select class="form-control" name="type" {{#if readonly}}readonly{{/if}}>
            <option value="1">commercial</option>
            <option value="2">heliport</option>
            <option value="3">general aviation</option>
            <option value="4">miltary</option>
            <option value="5">seaplane</option>
        </select>
    </div>
    <div class="form-group">
        <label for="heading1">Heading (lowest value first)</label>
        <input type="text" class="form-control" name="heading1" {{#if readonly}}readonly{{/if}}>
    </div>
    <div class="form-group">
        <label for="name1">Name</label>
        <input type="text" class="form-control" name="name1" {{#if readonly}}readonly{{/if}}>
    </div>
    <div class="form-group">
        <label for="heading1">Heading (west)</label>
        <input type="text" class="form-control" name="heading2" {{#if readonly}}readonly{{/if}}>
    </div>
    <div class="form-group">
        <label for="name2">Name</label>
        <input type="text" class="form-control" name="name2" {{#if readonly}}readonly{{/if}}>
    </div>

    <div class="form-group">
        <label for="lat">Centrepoint latitude</label>
        <input type="text" class="form-control" name="lat" {{#if readonly}}readonly{{/if}}>
    </div>
    <div class="form-group">
        <label for="lon">Centrepoint longitude</label>
        <input type="text" class="form-control" name="lon" {{#if readonly}}readonly{{/if}}>
    </div>
    <div class="form-group">
        <label for="length">Length (metres)</label>
        <input type="text" class="form-control" name="length" {{#if readonly}}readonly{{/if}}>
    </div>
    <div class="form-group">
        <label for="width">width (metres)</label>
        <input type="text" class="form-control" name="width" {{#if readonly}}readonly{{/if}}>
    </div>

    <button class="btn btn-primary" type="submit">Submit form</button>
</form>