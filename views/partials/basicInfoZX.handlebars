<h3>Basic info</h3>
<table class="table" class="display" id="basicInfo">
    <tr>
        <td>Airport name</td>
        <td>{{airport.name}}</td>
        <td>Elevation</td>
        <td>{{airport.ele}}</td>
    </tr>
    <tr>
        <td>City served</td>
        <td>{{airport.city}}</td>
        <td>Magnetic Variation</td>
        <td>{{airport.variation}}</td>
    </tr>
    <tr>
        <td>Latitude</td>
        <td>{{airport.lat}}</td>
        <td>Longitude</td>
        <td>{{airport.lon}}</td>
    </tr>
    {{#if airport.faa}}
    <tr>{{else if airport.iata}}
        <tr>{{/if}} {{#if airport.faa}}
            <td>FAA Code</td>
            <td>{{airport.faa}}</td>
            {{/if}} {{#if airport.iata}}
            <td>IATA Code</td>
            <td>{{airport.iata}}</td>
            {{/if}} {{#if airport.faa}}
        </tr>{{else if airport.iata}}</tr>{{/if}}
</table>